{
  "name": "bonte_server",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "dotenv -e .production.env -- bun dist/index.js",
    "dev": "dotenv -e .development.env -- nodemon --exec tsx src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "dotenv -e .development.env -- drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e .production.env -- drizzle-kit migrate",
    "db:push:dev": "dotenv -e .development.env -- drizzle-kit push",
    "db:push:prod": "dotenv -e .production.env -- drizzle-kit push",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.5",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "axios": "^1.13.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  }
}
